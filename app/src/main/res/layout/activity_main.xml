<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.artjoker.alexsinyaev.sample.MainActivity">

    <com.artjoker.alexsinyaev.pulltorefresh.PullToRefreshView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refresh">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/adapter_item_padding"
                android:paddingRight="@dimen/adapter_item_padding"
                android:paddingTop="@dimen/adapter_item_padding"></android.support.v7.widget.RecyclerView>
        </android.support.design.widget.CoordinatorLayout>
    </com.artjoker.alexsinyaev.pulltorefresh.PullToRefreshView>


</RelativeLayout>
